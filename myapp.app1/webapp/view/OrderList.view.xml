<mvc:View
    controllerName = "myapp.app1.myapp.app1.controller.OrderList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
<App id='app'>
<Page id="page">
    <List
		items="{main>/Orders}"
		headerText="Order"
		growing="true"
		growingThreshold="4"
		growingScrollToLoad="false">
		<StandardListItem
            press="onPressOrder"
            type="Active"
			title="{main>OrderID}"
			description="{main>CustomerID}"
			icon="sap-icon://notes"
			iconDensityAware="false"
			iconInset="false" />
	</List>
    </Page>
	</App>

</mvc:View>